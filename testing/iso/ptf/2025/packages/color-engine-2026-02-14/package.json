{
  "private": true,
  "name": "@conres/color-engine",
  "version": "0.0.1",
  "type": "module",
  "description": "WebAssembly-based color management engine with K-Only BPC+GCR for ConRes projects",
  "main": "./dist/color-engine.js",
  "types": "./dist/color-engine.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
