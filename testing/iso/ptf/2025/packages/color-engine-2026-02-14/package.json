    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^4.0.0"
  },
  "packageManager": "yarn@4.5.3",
  "engines": {
    "node": ">=24",
    "yarn": ">=4.5.0"
  }
}
